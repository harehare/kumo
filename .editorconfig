root = true

[*]
indent_style = space
charset = utf-8
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

[*.js, *.ts]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.cs, *.razor]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
